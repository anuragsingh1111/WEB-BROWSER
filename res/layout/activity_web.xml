<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/unnamed">
<RelativeLayout 
    android:id="@+id/mainpage1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.my.webbrowser.Web" >

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="103dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:imeOptions="actionSearch"
        android:inputType="textWebEditText"
        android:labelFor="@+id/editText2" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/but"
        android:gravity="center"
        android:text="@string/go" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/google"
        android:src="@drawable/google" />

    <ImageButton
        android:id="@+id/music"
        android:contentDescription="@string/music_"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="48dp"
        android:src="@drawable/music" />

    <ImageButton
        android:id="@+id/fb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/button1"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/music"
        android:contentDescription="@string/fb"
        android:src="@drawable/fblogo" />

    <ImageButton
        android:id="@+id/wiki"
        android:contentDescription="@string/wiki"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/music"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wiki" />

    <ImageButton
        android:id="@+id/gm"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/wiki"
        android:layout_alignTop="@+id/shop"
        android:contentDescription="@string/gm"
        android:src="@drawable/glogo" />

    <ImageButton
        android:id="@+id/shop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/fb"
        android:layout_below="@+id/fb"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/shop"
        android:src="@drawable/shopping" />

    <ImageButton
        android:id="@+id/stackflow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/music"
        android:layout_alignTop="@+id/gm"
        android:src="@drawable/stackflow" 
        android:contentDescription="@string/program"/>

</RelativeLayout>
</ScrollView>